template_overlay
    openEHR-EHR-OBSERVATION.ovl-a-height-001.v1.0.0

specialize
    openEHR-EHR-OBSERVATION.height.v1.0.0

definition
    OBSERVATION[id1.1] matches {
        /data[id2]/events[id3]/data[id4]/items matches {
            ELEMENT[id5.1] matches {
                value matches {
                    DV_QUANTITY[id21.1] matches {
                        [units, magnitude, precision] matches {
                            [{"cm"}, {|0.0..1002.0|;7.0}, {|>=0|}],
                            [{"in"}, {|0.0..250.0|}, {|>=0|}]
                        }
                    }
                }
            }
        }
    }
